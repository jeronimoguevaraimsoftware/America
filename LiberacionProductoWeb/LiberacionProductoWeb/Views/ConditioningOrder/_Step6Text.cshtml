@using Microsoft.AspNetCore.Mvc.Localization
@model LiberacionProductoWeb.Models.ConditioningOrderViewModels.ConditioningOrderViewModel;
@inject IViewLocalizer Localizer

<div class="row">
    <div class="col-lg-12">
        <div class="panel-group" id="step-6-accordionOA">
            <div class="panel panel-primary overflow-hidden">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a class="accordion-toggle accordion-toggle-styled" data-toggle="collapse"
                            data-parent="#step-6-accordionOA" href="#step-6-collapseOA-three" aria-expanded="true">
                            <i id="icon-6" class="fa fa-plus-circle pull-right"></i>
                            Certificado de análisis.
                        </a>
                    </h3>
                </div>
                <div id="step-6-collapseOA-three" class="@Model.ShowPanelSteps" style="">
                    <div class="panel-body">
                        <p>
                            El objetivo del Certificado de análisis es evidenciar las características de
                            producto medicinal y la rastreabilidad del producto desde el cliente
                            primario hasta la fabricación del producto.
                        </p>

                        <p>
                            Se emitirá un Certificado de análisis(COC-4) @(Model.Product) foliado por cada cliente, despues de
                            analizada la unidad de distribución y de acuerdo a lo reportado en el
                            formato correspondiente:
                        </p>

                        

                        <p>
                            Los folios de los Certificados de análisis emitidos, se registrarán en la
                            Tabla 5
                            - Control de llenado de pipas, por cada lote de producción fabricado en
                            la
                            instalación.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
